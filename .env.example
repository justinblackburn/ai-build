#!/usr/bin/env bash
# Copy to `.env` and `source .env` before running Ansible commands.
# All paths assume you run from the repository root.

export ANSIBLE_CONFIG="${PWD}/ansible/ansible.cfg"
export ANSIBLE_INVENTORY="${PWD}/ansible/inventory/hosts.yml"
export ANSIBLE_VAULT_PASSWORD_FILE="${PWD}/ansible/.vault_pass.txt"
export ANSIBLE_STDOUT_CALLBACK=yaml
export ANSIBLE_RETRY_FILES_ENABLED=false

# Stable Diffusion / Whisper defaults
export SD_WEBUI_ROOT="/opt/stable-diffusion-webui"
export SD_WEBUI_DATA_DIR="/home/sd-data/data"
